<nav class="bg-gray-800 p-4 text-white">
  <div class="container mx-auto flex justify-between items-center">
    <% if user_signed_in? %>
      <div class="flex items-center space-x-4">
        <h2 class="font-semibold"><%= current_user.email %></h2>
      </div>
      <div class="flex items-center space-x-4">
        <%= link_to "Edit Account", edit_user_registration_path, class: "hover:text-gray-300", data: { turbo_frame: "_top" } %>
        <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete, class: "bg-red-600 hover:bg-red-700 px-3 py-1 rounded" %>
      </div>
    <% else %>
      <div class="text-lg font-bold">Arenas</div>
      <div class="flex items-center space-x-4">
        <%= link_to "Login", new_user_session_path, class: "hover:text-gray-300", data: { turbo_frame: "_top" } %>
        <%= link_to "Create Account", new_user_registration_path, class: "bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded", data: { turbo_frame: "_top" } %>
      </div>
    <% end %>
  </div>
</nav>